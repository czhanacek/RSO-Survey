<div class="row">
  <div class="col-md-12">
    <%= flash_messages %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <h3>Question/Category Bulk Upload</h3>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= form_for(Csv.new, url: survey_bulk_upload_path, method: "post") do |f|%>
      <div class="form-group">
        <%= f.label :csvfile, "CSV File Upload" %>
        <%= f.file_field :csvfile %>
      </div>
      <%= f.submit "Upload", class: "btn btn-primary btn-block"%>
    <% end %>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <%= link_to("Export the existing questions to a CSV file", survey_bulk_download_path + ".csv", class: "btn btn-success")%>
  </div>
</div>
