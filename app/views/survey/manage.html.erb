<h4>Create a question</h4>

<% if flash[:success] %>
    <div class="alert alert-success"><%= flash[:success] %></div>
<% end %>
<%= form_tag({controller: "survey", action: "create_question"}, method: "post") do %>
  <%= label_tag(:question_title, "Enter a question") %>
  <%= text_field_tag(:question_title) %>
  <br />
  <%= label_tag(:answer1, "Answer 1:") %>
  <%= text_field_tag(:answer1) %>
  <br />
  <%= label_tag(:answer2, "Answer 2:") %>
  <%= text_field_tag(:answer2) %>
  <br />
  <%= label_tag(:answer3, "Answer 3:") %>
  <%= text_field_tag(:answer3) %>
  <br />
  <%= label_tag(:answer4, "Answer 4:") %>
  <%= text_field_tag(:answer4) %>
  <br />
  <%= label_tag(:position, "Position:") %>
  <%= text_field_tag(:position) %>
  <br />
  <%= submit_tag("Create") %>
<% end %>
<hr />
<h4>Add keyword to answer</h4>
<% @questions.each do |q| %>
  <p><%= q.question_title %></p>
  <%= render partial: 'answer_keyword', :locals => {:q => q} %>
<% end %>
