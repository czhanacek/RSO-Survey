<div class="row">
  <div class="col-md-12">
    <div class="jumbotron crimson-gradient">
        <div class="row">
            <div class="col-md-2">
            <img class="img-fluid" src="<%= asset_path('coug_logo.png') %>" />
            </div>
            <div class="col-md-10">
            <h1 class="display-2">RSO Survey</h1>
            <p class="lead" style="color: white">Find where you belong.</p>
            </div>
        </div>
        </div>

        <div class="row">
        <div class="col-md-12">
            <p style="font-size: 150%; color: white;">
            All students are encouraged to join the many student organizations
            Washington State University has to offer. <br />Please complete this survey
            to find what kinds of organizations you might be interested in joining.
            </p>
        </div>
    </div>
    <%= form_tag({controller: "survey", action: "prelim1_submit"}, method: "post") do %>
        <h3>Please select the types of RSOs that you are interested in:</h3>
        <% @category_groups.each do |category_group| %>
            <div class="form-check">
                <h5>
                    <%= label_tag category_group.title do%>
                        <%= check_box_tag "category_groups[]", category_group.id %>
                        <%= category_group.title %>
                    <% end %>
                </h5>
            </div>
        <% end %>
    <br />
      <%= submit_tag "Submit", class: "btn btn-success btn-lg btn-block" %>
    <% end %>
  </div>
</div>
