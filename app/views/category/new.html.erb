
<div class="row">
    <div class="col-md-12">
        <%= flash_messages %>
        <h3>Create a category</h3>
        <%= form_tag({controller: "category", action: "create"}, method: "post") do %>
            <div class="form-group row">
                <%= label_tag :title, "Title", class: "col-2 col-form-label" %>
                <div class="col-5">
                    <%= text_field_tag :title, "", class: "form-control", type: "text" %>
                </div>
            </div>
            <div class="form-group row">
                <%= label_tag :category_group, "Category Group", class: "col-2 col-form-label" %>
                <div class="col-5">
                    <%= select_tag(:category_group, options_for_select((CategoryGroup.all.collect { |c| ["#{c.title}", c.id]})), class: "form-control" )%>
                </div>
            </div>
            <%= submit_tag "Create Category", class: "btn btn-success" %>
        <% end %>
    </div>
</div>
